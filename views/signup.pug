extends layout 

block content 
    div
        h1(class="text-center text-3xl font-bold text-gray-200 md:text-4xl lg:text-5xl") Eager Parrot
        form(action="/user/signup" method="post" class="sm:mx-auto sm:w-3/4 md:w-3/5 lg:w-5/12 m-4 md:mt-16 p-4 shadow-lg rounded-lg bg-gray-800")
            h2(class="text-2xl text-center font-bold text-gray-100 pb-8") Inscription 
            div(class="flex flex-col mb-4")
                input(autofocus class="focus:outline-slate-400 rounded-sm p-2 text-gray-800 bg-gray-100" type="text" name="firstname" placeholder="Votre prénom ..." value=badData ? badData.firstname : '')
                span(class="ml-1 text-red-400 text-sm")= errors ? errors.firstname : ''
            div(class="flex flex-col mb-4")
                input(class="focus:outline-slate-400 rounded-sm p-2 text-gray-800 bg-gray-100" type="text" name="lastname" placeholder="Votre nom ..." value=badData ? badData.lastname : '')                
                span(class="ml-1 text-red-400 text-sm")= errors ? errors.lastname : ''
            div(class="flex flex-col mb-4")
                input(class="focus:outline-slate-400 rounded-sm p-2 text-gray-800 bg-gray-100" type="email" name="email" placeholder="Votre email ..." value=badData ? badData.email : '')
                span(class="ml-1 text-red-400 text-sm")= errors ? errors.email : ''
            div(class="flex flex-col mb-4")
                input(class="focus:outline-slate-400 rounded-sm p-2 text-gray-800 bg-gray-100" type="text" name="username" placeholder="Nom d'utilisateur ..." value=badData ? badData.username : '')
                span(class="ml-1 text-red-400 text-sm")= errors ? errors.username : ''
            div(class="flex flex-col mb-4")
                input(class="focus:outline-slate-400 rounded-sm p-2 text-gray-800 bg-gray-100" type="password" name="password1" placeholder="Mot de passe ..." value=badData ? badData.password1 : '')
                span(class="ml-1 text-red-400 text-sm")= errors ? errors.password1 : ''
            div(class="flex flex-col mb-4")
                input(class="focus:outline-slate-400 rounded-sm p-2 text-gray-800 bg-gray-100" type="password" name="password2" placeholder="Confirmez le mot de passe ..." value=badData ? badData.password2 : '')
                span(class="ml-1 text-red-400 text-sm")= errors ? errors.password2 : ''
            div(class="flex flex-col items-center")
                input(class="cursor-pointer text-slate-100 bg-slate-600 hover:bg-slate-700 px-4 py-1 rounded-lg shadow mb-2" type="submit" value="Sign Up")
                span(class="mb-2") Vous avez déjà un compte ?
                a(class="cursor-pointer text-slate-100 bg-slate-600 hover:bg-slate-700 px-4 py-1 rounded-lg shadow" href="/user/signin") Connectez-vous !
                